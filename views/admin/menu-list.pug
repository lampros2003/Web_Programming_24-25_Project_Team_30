extends ./layout_admin

block content
  .container.mt-4
    .d-flex.justify-content-between.align-items-center.mb-3
      h1= title
      a.btn.btn-primary(href="/admin/menu/add") Add New Item

    if menuItems.length > 0
      table.table.table-striped
        thead
          tr
            th Name
            th Category
            th Price
            th Available
            th Actions
        tbody
          each item in menuItems
            tr
              td= item.name
              td= item.category
              td= item.price.toFixed(2)
              td= item.available ? 'Yes' : 'No'
              td
                a.btn.btn-sm.btn-outline-primary.me-2(href=`/admin/menu/edit/${item.id}`) Edit
                a.btn.btn-sm.btn-outline-danger(href=`/admin/menu/delete/${item.id}`) Delete
    else
      p No menu items found.

