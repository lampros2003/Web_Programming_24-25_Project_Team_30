doctype html
// sample date
-const date = "23/05/2025"
html
  head
    title= date 
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    style.
      .table th:nth-child(2), .table td:nth-child(2) {
          width: 20%;
      }
      .modal-dialog {
          max-width: 500px;
      }
  body.container.mt-4
    h2.text-center.mb-4 Restaurant Schedule
    
    button.btn.btn-primary(type="button", data-bs-toggle="modal", data-bs-target="#scheduleModal") Open Schedule

    .modal.fade#scheduleModal(tabindex="-1", aria-labelledby="scheduleModalLabel", aria-hidden="true")
      .modal-dialog
        .modal-content
          .modal-header
            h5.modal-title#scheduleModalLabel= date  
            button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
          .modal-body
            table.table.table-bordered.table-striped.text-center
              thead.table-dark
                tr
                  th Time Slot
                  th Reservations
              tbody
              //- Sample data for time slots and number of reservations 
              -const time_slots = ["12:00-13:00", "13:00-14:00", "14:00-15:00", "15:00-16:00", "16:00-17:00", "17:00-18:00", "18:00-19:00", "19:00-20:00", "20:00-21:00", "21:00-22:00"]
              -const num_of_reservations = [5, 3, 8, 2, 4, 6, 7, 1, 0, 9]
              each time_slot,i in  time_slots 
                tr 
                  td= time_slot
                  td= num_of_reservations[i]
