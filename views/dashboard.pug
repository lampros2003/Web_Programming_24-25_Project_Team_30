doctype html 
html 
    -const title= "Dashboard"
    head
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    link(rel='stylesheet', href='/stylesheets/dashboard_style.css')
    body 
        include nav_bar.pug
        form.dashboard-form(action="dashboard", method="post")
            select(name="months" id="months" onchange="this.form.submit()")
                -const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
                for month in months
                    option(
                        value=month
                        selected=(month === period)
                    )= month
        h1= period 
        .calendar
            -const days = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"]
            for day in days 
                .day-header= day
        
            -let day_number = 1
            -const areas = ["area-1", "area-2", "area-3", "area-4"]

            //sample data
            -const reservations = Array(31).fill(4)
            -const area_2 = Array(31).fill(20)
            -const area_3 = Array(31).fill(1)
            -const area_4 = Array(31).fill(3)

            - for (let i = 1; i < total_days+first_day  ; i++)
                if i < first_day
                    .empty
                else
                    .day(data-bs-toggle="modal" data-bs-target="#scheduleModal" data-date=`${i-first_day+1} ${period} 2025`)
                        .day-number= i-first_day+1                
                        .area(class= areas[0])= reservations[i-first_day]
                        .area(class= areas[1])= area_2[i-first_day]
                        .area(class= areas[2])= area_3[i-first_day]
                        .area(class= areas[3])= area_4[i-first_day]
                        
    include day_pop_up.pug




